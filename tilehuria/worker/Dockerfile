FROM node:14-alpine as lerna-base
RUN apk add --no-cache jq
RUN npm i lerna -g --loglevel error
USER node
RUN mkdir /home/node/app
WORKDIR /home/node/app

COPY --chown=node:node package.json yarn.* lerna.json tsconfig.json tsconfig.build.json ./
#
COPY --chown=node:node tilehuria/schema/package.json tilehuria/schema/yarn.* tilehuria/schema/
#
COPY --chown=node:node tilehuria/worker/package.json tilehuria/worker/yarn.* /home/node/app/tilehuria/worker/

FROM lerna-base as builder
RUN lerna bootstrap --ignore-scripts
#
COPY --chown=node:node tilehuria/schema /home/node/app/tilehuria/schema
#
COPY --chown=node:node tilehuria/worker /home/node/app/tilehuria/worker

RUN lerna run build

FROM lerna-base as dependencies
RUN cat tilehuria/worker/package.json | jq '. * {workspaces: {nohoist: ["**"]}}' > tilehuria/worker/package.json
RUN lerna bootstrap --ignore-scripts -- --production --no-optional
RUN tar -cf /home/node/dependencies.tar tilehuria/worker/node_modules tilehuria/worker/package.json tilehuria/worker/yarn.*

FROM node:14-alpine as run
USER node
RUN mkdir /home/node/app
WORKDIR /home/node/app
EXPOSE 3000
COPY --from=dependencies /home/node/dependencies.tar /tmp
RUN tar -xf /tmp/dependencies.tar
COPY --from=builder /home/node/app/tilehuria/worker/dist /home/node/app/tilehuria/worker/dist
CMD cd tilehuria/worker && node dist/index.js

