COPY --chown=node:node tilehuria/hooks/package.json tilehuria/hooks/yarn.* /home/node/app/tilehuria/hooks/

RUN yarn
#
COPY --chown=node:node tilehuria/hooks /home/node/app/tilehuria/hooks

CMD cd tilehuria/hooks && yarn dev
