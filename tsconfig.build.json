{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "removeComments": true,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": ["types/*"]
    }
  },

  "exclude": ["node_modules", "dist", "**/*.js"]
}
